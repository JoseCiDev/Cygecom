{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "file": {
            "type": "object",
            "properties": {
                "filePath": {
                    "type": "string"
                }
            },
            "required": [
                "filePath"
            ]
        },
        "viewport": {
            "type": "object",
            "properties": {
                "sizes": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": [
                            {
                                "type": "integer"
                            },
                            {
                                "type": "integer"
                            }
                        ],
                        "minItems": 2,
                        "maxItems": 2
                    }
                }
            },
            "required": [
                "sizes"
            ]
        },
        "Url": {
            "type": "object",
            "properties": {
                "login": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "login"
            ]
        },
        "Autentication": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "email",
                "password"
            ]
        },
        "Register": {
            "type": "object",
            "properties": {
                "userRegistration": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "birthDate": {
                            "type": "string",
                            "format": "date"
                        },
                        "cpf": {
                            "type": "string"
                        },
                        "cnpj": {
                            "type": "string"
                        },
                        "telephone": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string",
                            "format": "email"
                        },
                        "password": {
                            "type": "string"
                        },
                        "confirmPassword": {
                            "type": "string"
                        },
                        "userProfile": {
                            "type": "string"
                        },
                        "sector": {
                            "type": "string"
                        },
                        "approverUser": {
                            "type": "string"
                        },
                        "approvalLimit": {
                            "type": "string"
                        },
                        "authorizationRequest": {
                            "type": "string"
                        },
                        "requestOtherUsers": {
                            "type": "string"
                        },
                        "allowedRequestCostCenter": {
                            "type": "string"
                        },
                        "allowedApprovalCostCenter": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "birthDate",
                        "cpf",
                        "cnpj",
                        "telephone",
                        "email",
                        "password",
                        "confirmPassword",
                        "userProfile",
                        "sector",
                        "approverUser",
                        "approvalLimit",
                        "authorizationRequest",
                        "requestOtherUsers",
                        "allowedRequestCostCenter",
                        "allowedApprovalCostCenter"
                    ]
                }
            },
            "required": [
                "userRegistration"
            ]
        },
        "Request": {
            "type": "object",
            "properties": {
                "product": {
                    "type": "object",
                    "properties": {
                        "costCenter": {
                            "type": "string"
                        },
                        "apportionmentPercentage": {
                            "type": "number"
                        },
                        "apportionmentValue": {
                            "type": "number"
                        },
                        "quoteRequest": {
                            "type": "object",
                            "properties": {
                                "quoteRequest": {
                                    "type": "boolean"
                                }
                            },
                            "required": [
                                "quoteRequest"
                            ]
                        },
                        "acquiringArea": {
                            "type": "string"
                        },
                        "comexImport": {
                            "type": "string"
                        },
                        "reasonForRequest": {
                            "type": "string"
                        },
                        "desiredDeliveryDate": {
                            "type": "string"
                        },
                        "productStorageLocation": {
                            "type": "string"
                        },
                        "suggestionLinks": {
                            "type": "string"
                        },
                        "observation": {
                            "type": "string"
                        },
                        "PaymentCondition": {
                            "type": "object",
                            "properties": {
                                "anticipatedPayment": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ],
                                    "minItems": 2,
                                    "maxItems": 2
                                },
                                "cashPayment": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ],
                                    "minItems": 2,
                                    "maxItems": 2
                                },
                                "paymentInInstallments": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ],
                                    "minItems": 2,
                                    "maxItems": 2
                                }
                            },
                            "required": [
                                "anticipatedPayment",
                                "cashPayment",
                                "paymentInInstallments"
                            ]
                        },
                        "totalValue": {
                            "type": "number"
                        },
                        "paymentMethod": {
                            "type": "object",
                            "properties": {
                                "boleto": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ]
                                },
                                "creditCard": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ]
                                },
                                "debitCard": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ]
                                },
                                "cheque": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ]
                                },
                                "bankDeposit": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ]
                                },
                                "cash": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ]
                                },
                                "international": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ]
                                },
                                "pix": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            },
                            "required": [
                                "boleto",
                                "creditCard",
                                "debitCard",
                                "cheque",
                                "bankDeposit",
                                "cash",
                                "international",
                                "pix"
                            ]
                        },
                        "paymentInstallments": {
                            "type": "integer"
                        },
                        "paymentDetails": {
                            "type": "string"
                        },
                        "supplier": {
                            "type": "string"
                        },
                        "productCategory": {
                            "type": "string"
                        },
                        "productNameAndDescription": {
                            "type": "string"
                        },
                        "productQuantity": {
                            "type": "integer"
                        },
                        "productColor": {
                            "type": "string"
                        },
                        "productSize": {
                            "type": "string"
                        },
                        "productModel": {
                            "type": "string"
                        },
                        "productLink": {
                            "type": "string",
                            "format": "uri"
                        },
                        "attachedFile": {
                            "type": "string"
                        },
                        "saveRequest": {
                            "type": "object",
                            "properties": {
                                "draft": {
                                    "type": "boolean"
                                },
                                "submit": {
                                    "type": "boolean"
                                }
                            },
                            "required": [
                                "draft",
                                "submit"
                            ]
                        }
                    },
                    "required": [
                        "costCenter",
                        "apportionmentPercentage",
                        "apportionmentValue",
                        "quoteRequest",
                        "acquiringArea",
                        "comexImport",
                        "reasonForRequest",
                        "desiredDeliveryDate",
                        "productStorageLocation",
                        "suggestionLinks",
                        "observation",
                        "PaymentCondition",
                        "totalValue",
                        "paymentMethod",
                        "paymentInstallments",
                        "paymentDetails",
                        "supplier",
                        "productCategory",
                        "productNameAndDescription",
                        "productQuantity",
                        "productColor",
                        "productSize",
                        "productModel",
                        "productLink",
                        "attachedFile",
                        "saveRequest"
                    ]
                }
            },
            "required": [
                "product"
            ]
        }
    },
    "required": [
        "Request",
        "file",
        "viewport",
        "url",
        "Autentication",
        "Register"
    ]
}